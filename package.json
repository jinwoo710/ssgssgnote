    "react-hook-form": "^7.54.2",
    "react-router-dom": "^7.3.0",
    "tailwindcss": "^4.0.14",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.21.0",
    "@tanstack/eslint-plugin-query": "^5.67.2",
